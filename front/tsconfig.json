{
  "compilerOptions": {
    "target": "es2021",
    "jsx": "react",
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
